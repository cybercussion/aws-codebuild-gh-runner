version: 2
updates:
  # ðŸ“Œ Node.js - Service B & C
  - package-ecosystem: "npm"
    directory: "/services/service-b/"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 5
    commit-message:
      prefix: "[npm update]"

  - package-ecosystem: "npm"
    directory: "/services/service-c/"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 5
    commit-message:
      prefix: "[npm update]"

  # ðŸ“Œ Python - Service A
  - package-ecosystem: "pip"
    directory: "/services/service-a/"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 5
    commit-message:
      prefix: "[pip update]"

  # ðŸ“Œ Docker - Per Service
  - package-ecosystem: "docker"
    directory: "/services/service-a/"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 5
    commit-message:
      prefix: "[docker update]"

  - package-ecosystem: "docker"
    directory: "/services/service-b/"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 5
    commit-message:
      prefix: "[docker update]"

  - package-ecosystem: "docker"
    directory: "/services/service-c/"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 5
    commit-message:
      prefix: "[docker update]"

  # ðŸ“Œ GitHub Actions
  - package-ecosystem: "github-actions"
    directory: "/"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 3
    commit-message:
      prefix: "[actions update]"